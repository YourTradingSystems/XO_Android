<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <CheckedTextView
            android:id="@+id/activity_preferences_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_sound_bg"
            android:text="@string/settings_sound"
            android:checkMark="@drawable/selector_check_box_settings"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>

        <CheckedTextView
            android:id="@+id/activity_preferences_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_music_bg"
            android:text="@string/settings_music"
            android:checkMark="@drawable/selector_check_box_settings"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>

        <CheckedTextView
            android:id="@+id/activity_preferences_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_push_bg"
            android:text="@string/settings_push"
            android:checkMark="@drawable/selector_check_box_settings"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>

        <CheckedTextView
            android:id="@+id/activity_preferences_analytics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_sound_bg"
            android:text="@string/settings_analytics"
            android:checkMark="@drawable/selector_check_box_settings"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
        <Button
            android:id="@+id/activity_preferences_signin_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_sound_bg"
            android:checkMark="@drawable/selector_check_box_settings"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/activity_preferences_adsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </RelativeLayout>

</RelativeLayout>